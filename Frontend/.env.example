# ===========================================
# FRONTEND ENVIRONMENT VARIABLES
# ===========================================

# API Configuration
NEXT_PUBLIC_API_URL=http://127.0.0.1:8000

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_SHOW_API_ERRORS=true

# Authentication URLs - ENDPOINTS FOR AUTHENTIFICATION
NEXT_PUBLIC_AUTH_LOGIN_URL=/api/login/
NEXT_PUBLIC_AUTH_REGISTER_URL=/api/register/
NEXT_PUBLIC_AUTH_PROFILE_URL=/api/profile/
NEXT_PUBLIC_AUTH_RESET_PASSWORD_URL=/api/reset-password/
NEXT_PUBLIC_AUTH_REFRESH_TOKEN_URL=/api/refresh/

# Books API URLs - ENDPOINTS FOR BOOKS
NEXT_PUBLIC_BOOKS_LIST_URL=/scraping/book_list/
NEXT_PUBLIC_BOOKS_DETAIL_URL=/scraping/books/
NEXT_PUBLIC_BOOKS_SEARCH_URL=/scraping/books/search/
NEXT_PUBLIC_BOOKS_RECOMMENDED_URL=/scraping/books/{id}/recommended/

# Favorites API URLs - ENDPOINTS FOR FAVORITES
NEXT_PUBLIC_FAVORITES_URL=/api/favorites/
NEXT_PUBLIC_ADD_FAVORITE_URL=/api/favorites/{id}/
NEXT_PUBLIC_REMOVE_FAVORITE_URL=/api/favorites/{id}/

# Cart API URLs - ENDPOINTS FOR CART
NEXT_PUBLIC_CART_URL=/api/cart/
NEXT_PUBLIC_ADD_TO_CART_URL=/api/cart/add/
NEXT_PUBLIC_REMOVE_FROM_CART_URL=/api/cart/remove/

# Reviews API URLs - ENDPOINTS FOR REVIEWS
NEXT_PUBLIC_REVIEWS_URL=/api/reviews/
NEXT_PUBLIC_ADD_REVIEW_URL=/api/reviews/add/

# Admin API URLs - ENDPOINTS FOR ADMIN PANEL
NEXT_PUBLIC_ADMIN_BOOKS_URL=/api/admin/books/
NEXT_PUBLIC_ADMIN_USERS_URL=/api/admin/users/
NEXT_PUBLIC_ADMIN_STATS_URL=/api/admin/stats/

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/jpg
NEXT_PUBLIC_UPLOAD_URL=/api/upload/

# Pagination Settings
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=12
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# Search Configuration
NEXT_PUBLIC_SEARCH_MIN_LENGTH=3
NEXT_PUBLIC_SEARCH_DEBOUNCE_TIME=500

# UI Configuration
NEXT_PUBLIC_SITE_NAME=Book Shelf
NEXT_PUBLIC_SITE_DESCRIPTION=Your Personal Digital Library
NEXT_PUBLIC_DEFAULT_LANGUAGE=en

# Feature Flags
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_WISHLIST=true
NEXT_PUBLIC_ENABLE_CART=true
NEXT_PUBLIC_ENABLE_ADMIN_PANEL=true
NEXT_PUBLIC_ENABLE_SEARCH=true
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=false

# Image Configuration
NEXT_PUBLIC_IMAGE_QUALITY=80
NEXT_PUBLIC_IMAGE_PLACEHOLDER=/logo.png

# Toast Notifications
NEXT_PUBLIC_TOAST_DURATION=4000
NEXT_PUBLIC_TOAST_POSITION=top-right

# Performance Settings
NEXT_PUBLIC_CACHE_TTL=3600
NEXT_PUBLIC_ENABLE_COMPRESSION=true

# PWA Configuration
NEXT_PUBLIC_PWA_ENABLED=false
NEXT_PUBLIC_PWA_NAME=Book Shelf App
